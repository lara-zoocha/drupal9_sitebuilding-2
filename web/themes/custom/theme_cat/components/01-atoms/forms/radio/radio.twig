{% if not attributes %}
<fieldset class="form-item form-item--radio{% if radio_error %} form-item--error{% endif %}">
  <legend class="heading--small">Options as Radio Buttons</legend>
  <ul class="form-item--radios{% if radio_inline %} form-item--radios--inline{% endif %}">
{% endif %}
    {% for key, radio in radios %}
      {% include "@atoms/forms/radio/_radio-item.twig" with {
        radio_item: radio.title,
        radio_item_checked: radio.checked
      } %}
    {% endfor %}
{% if not attributes %}
  </ul>
</fieldset>
{% endif %}
